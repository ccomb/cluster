    {{- if not (keyExists (print "maintenance/" $k)) }}
        {{- range $confname, $conf := $d.haproxy }}
            {{- if not (or (eq $confname "http-in") (eq $confname "https-in")) }}

frontend front-{{ $confname }}
    mode {{ $conf.frontend.mode }}
                {{- range $option := $conf.frontend.options }}
