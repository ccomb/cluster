                {{- end }}
                {{- range $bind := $conf.frontend.bind }}
    bind {{ $bind }}
                {{- end }}
                {{- range $backend := $conf.backends }}
    use_backend backend-{{ or (index $backend "name") $backend.ct }} {{ or (index $backend "use_backend_option") "" }}
                {{- end }}
